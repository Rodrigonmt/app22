<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app22.MainPage">


    <VerticalStackLayout VerticalOptions="Center" Padding="10" Spacing="10">
        <Label 
            Text="Pagina protegida"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Frame>
            <VerticalStackLayout>
                <Label Text="Área Protegida" 
                       FontSize="Large"
                       HorizontalTextAlignment="Center"/>
                <Label x:Name="lbl_boasvindas"
                       HorizontalTextAlignment="Center"/>
                <Button x:Name="Desconnectar"
                        HorizontalOptions="Center"
                        Clicked="Desconnectar_Clicked"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>


</ContentPage>
