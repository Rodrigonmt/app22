<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app22.MainPage">

    <Grid>
        <VerticalStackLayout VerticalOptions="Start">
            <HorizontalStackLayout Padding="2" HorizontalOptions="Center">
                <Button Text="Tirar Foto do Equipamento"
                    Clicked="BtnTirarFoto_Clicked"
                    HorizontalOptions="Center" />
                <Frame HeightRequest="50" WidthRequest="50" IsVisible="False" x:Name="FrameImagemPreview" Padding="0">
                    <Image x:Name="ImagemEquipamentoPreview"
               Aspect="AspectFill" />
                </Frame>
            </HorizontalStackLayout>

            <Border>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Label Text="Selecione o equipamento com defeito" FontSize="18" HorizontalOptions="Center"/>
            </Border>
            
            <HorizontalStackLayout Padding="10" Spacing="29">
                <VerticalStackLayout>
                    <Label Text="Geladeira" HorizontalOptions="Center" FontSize="18"/>
                    <Border 
                        WidthRequest="100" 
                        HeightRequest="100"
                        StrokeThickness="2"
                        BackgroundColor="Transparent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>

                        <Grid>
                            <Image
                                Source="geladeira.jpg"
                                Aspect="AspectFill" />

                            <Button
                                BackgroundColor="Transparent"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Padding="10"
                                Text="Geladeira"
                                TextColor="Transparent"
                                x:Name="BTNGeladeira"
                                Clicked="MarcarBotao_Clicked"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Lava-roupa" HorizontalOptions="Center" FontSize="18"/>
                    <Border 
                        WidthRequest="100" 
                        HeightRequest="100"
                        StrokeThickness="2"
                        BackgroundColor="Transparent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>

                        <Grid>
                            <Image
                        Source="maquina.jpg"
                        Aspect="AspectFill" />

                            <Button
                                BackgroundColor="Transparent"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Padding="10"
                                Text="Maquina de Lavar"
                                TextColor="Transparent"
                                x:Name="BTNLavadeira"
                                Clicked="MarcarBotao_Clicked"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
                
                <VerticalStackLayout>
                    <Label Text="Forno" HorizontalOptions="Center" FontSize="18"/>
                    <Border 
                       WidthRequest="100" 
                       HeightRequest="100"
                       StrokeThickness="2"
                       BackgroundColor="Transparent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>

                        <Grid>
                            <Image
                               Source="forno.jpg"
                               Aspect="AspectFill" />

                            <Button 
                               BackgroundColor="Transparent"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Padding="10"
                               Text="Forno"
                               TextColor="Transparent"
                               x:Name="BTNForno"
                               Clicked="MarcarBotao_Clicked"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
 
            </HorizontalStackLayout>

            <HorizontalStackLayout Padding="10" Spacing="7">
                <VerticalStackLayout>
                    <Label Text="Freezer" HorizontalOptions="Center" FontSize="18"/>
                    <Border 
                        WidthRequest="100" 
                        HeightRequest="100"
                        StrokeThickness="2"
                        BackgroundColor="Transparent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>

                        <Grid>
                            <Image
                                Source="congelador.jpg"
                                Aspect="AspectFill" />

                            <Button 
                                BackgroundColor="Transparent"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Padding="10"
                                Text="Congelador"
                                TextColor="Transparent"
                                x:Name="BTNCongelador"
                                Clicked="MarcarBotao_Clicked"/>
                        </Grid>
                    </Border>

                </VerticalStackLayout>
                
                <VerticalStackLayout>
                    <Label Text="Ar-Condicionado" HorizontalOptions="Center" FontSize="18"/>
                    <Border 
                        WidthRequest="100" 
                        HeightRequest="100"
                        StrokeThickness="2"
                        BackgroundColor="Transparent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>

                        <Grid>
                            <Image
                                Source="arcondicionado.jpg"
                                Aspect="AspectFill" />

                            <Button 
                                BackgroundColor="Transparent"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Padding="10"
                                Text="Ar condicionado"
                                TextColor="Transparent"
                                x:Name="BTNArcondicionado"
                                Clicked="MarcarBotao_Clicked"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
                
                <VerticalStackLayout>
                    <Label Text="Outros" HorizontalOptions="Center" FontSize="18"/>
                    <Border 
                        WidthRequest="100" 
                        HeightRequest="100"
                        StrokeThickness="2"
                        BackgroundColor="Transparent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>

                        <Grid>
                            <Image
                                Source="outros.jpg"
                                Aspect="AspectFill" />

                            <Button 
                                BackgroundColor="Transparent"
                                HorizontalOptions="Center"
                                VerticalOptions="Start"
                                Padding="10"
                                Text="Outros"
                                TextColor="Transparent"
                                x:Name="BTNOutros"
                                Clicked="MarcarBotao_Clicked"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
                
            </HorizontalStackLayout>
            <VerticalStackLayout Padding="20" Spacing="0">
                <Label Text="Selecione a data do agendamento:" FontSize="18" />
                <DatePicker x:Name="DataAgendamento" />

                <Label Text="Selecione o horário:" FontSize="18" />
                <TimePicker x:Name="HoraAgendamento" />

                <Button Text="CONFIRMAR" Margin="0,10,0,0" Clicked="BTNAgendar_Clicked"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
        
    </Grid>
    


</ContentPage>
