<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app22.Telas.NavegarMenus">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                <Label 
                    x:Name="BemVindoLabel"
                    Text="Bem-vindo(a)"
                    FontSize="22"
                    FontAttributes="Bold"
                    TextColor="#2c3e50"
                    HorizontalTextAlignment="Center"/>

                <Frame
                    WidthRequest="100"
                    HeightRequest="100"
                    CornerRadius="60"
                    Padding="0"
                    HasShadow="False"
                    BorderColor="Gray"
                    HorizontalOptions="Center"
                    IsClippedToBounds="True">
                    <ImageButton
                        x:Name="ImagemUsuario"
                        Source="user01.png"
                        BackgroundColor="Transparent"
                        Aspect="AspectFill"
                        WidthRequest="100"
                        HeightRequest="100"
                        CornerRadius="60"/>
                </Frame>
            </StackLayout>



            <!-- Botão: Criar Chamado -->
            <Frame CornerRadius="20" Padding="10" BackgroundColor="White" HasShadow="True">
                <Button Text="🛠️  Criar Chamado"
                        FontSize="20"
                        BackgroundColor="Transparent"
                        TextColor="#34495e"
                        Clicked="OnCriarChamadoClicked"/>
            </Frame>

            <!-- Botão: Histórico de Chamados -->
            <Frame CornerRadius="20" Padding="10" BackgroundColor="White" HasShadow="True">
                <Button Text="📜  Histórico de Chamados"
                        FontSize="20"
                        BackgroundColor="Transparent"
                        TextColor="#34495e"
                        Clicked="OnHistoricoClicked"/>
            </Frame>

            <!-- Botão: Vender Produtos -->
            <Frame CornerRadius="20" Padding="10" BackgroundColor="White" HasShadow="True">
                <Button Text="💰  Vender Produtos"
                        FontSize="20"
                        BackgroundColor="Transparent"
                        TextColor="#34495e"
                        Clicked="OnVenderClicked"/>
            </Frame>

            <!-- Botão: Comprar Produtos -->
            <Frame CornerRadius="20" Padding="10" BackgroundColor="White" HasShadow="True">
                <Button Text="🛒  Comprar Produtos"
                        FontSize="20"
                        BackgroundColor="Transparent"
                        TextColor="#34495e"
                        Clicked="OnComprarClicked"/>
            </Frame>

            <!-- Botão: Alterar Cadastro -->
            <Frame CornerRadius="20" Padding="10" BackgroundColor="White" HasShadow="True">
                <Button Text="✏️  Alterar Cadastro"
                        FontSize="20"
                        BackgroundColor="Transparent"
                        TextColor="#34495e"
                        Clicked="OnAlterarCadastroClicked"/>
            </Frame>

            <!-- Botão: Chamados Adm -->
            <Frame x:Name="ChamadosAdmFrame"
               CornerRadius="20"
               Padding="10"
               BackgroundColor="White"
               HasShadow="True">
                <Button Text="👨‍💼  Chamados Adm"
                    FontSize="20"
                    BackgroundColor="Transparent"
                    TextColor="#34495e"
                    Clicked="OnChamadosAdm"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>