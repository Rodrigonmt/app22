<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app22.Telas.Chamados">
    <ScrollView>
        <CollectionView x:Name="ChamadosCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Equipamento}" FontAttributes="Bold" FontSize="20"/>
                            <Label Text="{Binding DataSelecionada}" />
                            <Label Text="{Binding HoraSelecionada}" />
                            <Label Text="{Binding DataAtual}" FontSize="12" TextColor="Gray"/>
                            <Label Text="{Binding HoraAtual}" FontSize="12" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>